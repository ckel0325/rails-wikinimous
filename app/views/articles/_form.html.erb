<div class="form">
<%= form_for(article) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_field :content %>
    </div>
    <div >
      <%= f.submit class:"btn-primary btn"%>
    </div>
<% end %>
</div>
